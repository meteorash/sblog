<% @post.comments.each do |comment| %>
    <%= comment.user_id %>
    <% if(comment.body.nil? == false) %>
         <p>
            <span class="timestamp">
                Posted by <%= time_ago_in_words(comment.created_at) %> ago.
            </span><br>
            <%= comment.body %>
           <% if(user_signed_in?) %>
            <%= link_to 'Delete Comment', [comment.post, comment],
               :confirm => 'Are you sure?',
               :method => :delete %>
               <% end %>
         </p>
    <% end %>
<% end %>